<div
  class=""
  {% if testimonial.background_color %}
    style="background-color: {{ testimonial.background_color }}"
  {% endif %}
>
  <blockquote>
    <span
      class="testimonial-quote start"
      style="font-size: 4rem;transform: translateY(calc(10% * (4 * 0.833)));"
      >“</span
    >
    <p>{{ testimonial.testimonial }}</p>
    <span
      class="testimonial-quote end"
      style="font-size: 4rem;transform: translateY(calc(10% * (4 * 0.833)));"
      >”</span
    >
  </blockquote>
  <div class="review__author">
    <div class="review__author__content">
      <div class="review__author__name">{{ testimonial.author }}</div>
      <span class="review__author__subheading subheading">{{ testimonial.credentials }}</span>
    </div>
  </div>
</div>
